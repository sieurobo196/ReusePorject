       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
    <definition name="default" template="/WEB-INF/layouts/default.jspx">
        <put-attribute name="header" value="/WEB-INF/jsp/header.jspx" />
        <put-attribute name="navigation" value="/WEB-INF/jsp/navigation.jspx" />
        <put-attribute name="menu" value="/WEB-INF/jsp/menu.jspx" />
        <put-attribute name="footer" value="/WEB-INF/jsp/footer.jspx" />
    </definition>
	<definition name="public" template="/WEB-INF/layouts/public.jspx">
		<put-attribute name="header" value="/WEB-INF/jsp/header-login.jspx" />
		<put-attribute name="footer" value="/WEB-INF/jsp/footer-login.jspx" />
	</definition>
	
	<definition name="default-header" template="/WEB-INF/jsp/header.jspx">
	</definition>
	<definition name="default-navigation" template="/WEB-INF/jsp/navigation.jspx">
	</definition>
</tiles-definitions>
